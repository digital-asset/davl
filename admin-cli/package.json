{
  "private": true,
  "name": "davl-admin-cli",
  "version": "0.0.1",
  "description": "Admin tool for DAVL",
  "license": "Apache-2.0",
  "bin": "bin/index.js",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "test": "true",
    "lint": "eslint --ext .js,.ts src/ --max-warnings 0"
  },
  "dependencies": {
    "@daml.js/davl-v4-0.0.4": "file:../daml2ts/davl-0.0.4",
    "@daml.js/davl-v5-0;0.5": "file:../daml2ts/davl-0.0.5",
    "@daml.js/davl-upgrade-v4-v5-0.0.5": "file:../daml2ts/davl-upgrade-v4-v5-0.0.5",
    "@daml/ledger": "0.13.56-snapshot.20200411.3905.0.f050da78",
    "@types/jwt-simple": "^0.5.33",
    "jwt-simple": "^0.5.6",
    "node": "^13.6.0"
  },
  "devDependencies": {
    "@types/node": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "typescript": "~3.7.5",
    "@types/yargs": "^15.0.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-inferrable-types": "off"
    }
  }
}
